{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21
  },
  "configurePresets": [
    {
      "name": "ninja-debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/wrap_conan_toolchain.cmake",
        "CMAKE_GENERATOR_TOOLSET": "",
        "CMAKE_CXX_STANDARD": "23"
      },
      "environment": {
        "Platform": "",
        "CMAKE_GENERATOR_PLATFORM": "",
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    },
    {
      "name": "ninja-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/wrap_conan_toolchain.cmake",
        "CMAKE_GENERATOR_TOOLSET": "",
        "CMAKE_CXX_STANDARD": "23"
      },
      "environment": {
        "Platform": "",
        "CMAKE_GENERATOR_PLATFORM": "",
        "VSCMD_ARG_TGT_ARCH": "x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    }
  ]
}